# Synchronics Asset Management - Backend
# Copy to .env and set values. Never commit .env.

# Server
PORT=4001
NODE_ENV=development

# Database (Microsoft SQL Server 2008 R2)
DB_SERVER=192.168.50.100
DB_NAME=SyncFinalNew
DB_USER=sa
DB_PASSWORD=rani@123
DB_ENCRYPT=true
DB_TRUST_CERTIFICATE=true
DB_INSTANCE=
DB_POOL_MAX=10
DB_POOL_MIN=2

# JWT (use a long random secret in production)
JWT_SECRET=change-me-to-a-long-random-secret
JWT_EXPIRES_IN=8h

# CORS (comma-separated origins). Include every URL users open the app in (dev client is on 3001).
# For remote PC access, add your LAN IP: http://localhost:3001,http://192.168.50.200:3001
CORS_ORIGINS=http://localhost:3001

# Production: optional path to built client (client/dist). If unset, server looks for ../../client/dist when NODE_ENV=production.
# CLIENT_DIST=C:\path\to\client\dist

# Rate limiting (per IP; login limit is per 15 min window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_LOGIN_MAX=20

# Webmail (per-user mailbox credentials). Optional: set a 32-byte key (e.g. base64) to encrypt passwords. If unset, a dev default is used.
# MAILBOX_ENCRYPTION_KEY=your-base64-or-hex-32-byte-key

# hMailServer Email Admin (bridge must run on same Windows machine as hMailServer)
HMALL_BRIDGE_URL=http://127.0.0.1:5099
HMALL_BRIDGE_API_KEY=change-me-secure-api-key

# Uploads
UPLOAD_DIR=uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
